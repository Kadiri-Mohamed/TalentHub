{% extends 'layouts/base.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block styles %}
<style>
    .profile-card {
        background: #fff;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.1);
        transition: transform 0.3s;
    }
    .profile-card:hover {
        transform: translateY(-3px);
    }
    .profile-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }
    .profile-header h1 {
        margin: 0;
        font-size: 2rem;
    }
    .profile-info p {
        margin: 0.3rem 0;
        font-size: 1rem;
        color: #495057;
    }
    .btn-primary, .btn-success {
        border-radius: 5px;
        font-weight: 500;
    }
    .profile-section {
        margin-bottom: 20px;
    }
    .completion-bar {
        height: 10px;
        border-radius: 5px;
        background: #e9ecef;
        overflow: hidden;
        margin-top: 5px;
    }
    .completion-bar-inner {
        height: 100%;
        background: #4a6cf7;
        transition: width 0.4s ease;
    }
</style>
{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="profile-card">
        <div class="profile-header">
            <h1>{{ candidate.getName() }}</h1>
            <a href="/candidate/profile/edit" class="btn btn-primary">Modifier mon profil</a>
        </div>

        <div class="profile-section">
            <p><strong>Email:</strong> {{ candidate.getEmail() }}</p>
        </div>

        <div class="profile-section">
            <p><strong>CV:</strong>
                {% if candidate.getCvPath() %}
                    <a href="{{ candidate.getCvPath() }}" target="_blank" class="btn btn-outline-secondary btn-sm">Voir le CV</a>
                {% else %}
                    Non fourni
                {% endif %}
            </p>
            <form action="/candidate/profile/upload-cv" method="post" enctype="multipart/form-data" class="mt-2 d-flex align-items-center gap-2">
                <input type="file" name="cv" id="cv" class="form-control form-control-sm" required>
                <button type="submit" class="btn btn-success btn-sm">Uploader</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
