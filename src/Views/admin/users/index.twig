{% extends 'layouts/base.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Gestion des utilisateurs</h1>
    <a href="/admin/users/create" class="btn btn-danger">
        <i class="fas fa-plus me-2"></i>Nouvel utilisateur
    </a>
</div>

<form class="mb-3" method="get" action="/admin/users/search">
    <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Rechercher par nom ou email">
        <button class="btn btn-outline-danger">
            <i class="fas fa-search"></i>
        </button>
    </div>
</form>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Rôle</th>
                    <th>Statut</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <span class="badge bg-info">
                            {{ user.role ? user.role.name : 'Aucun rôle' }}
                        </span>
                    </td>
                    <td>
                        {% if user.active %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-secondary">Suspendu</span>
                        {% endif %}
                    </td>
                    <td class="text-end">
                        <a href="/admin/users/{{ user.id }}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="/admin/users/{{ user.id }}/edit" class="btn btn-sm btn-outline-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="/admin/users/{{ user.id }}/toggle-status" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-toggle-on"></i>
                        </a>
                        <a href="/admin/users/{{ user.id }}/delete"
                           class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('Supprimer cet utilisateur ?')">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        Aucun utilisateur trouvé
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
