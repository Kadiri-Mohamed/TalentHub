{# src/Views/auth/register.twig #}
{% extends 'layouts/base.twig' %}

{% block title %}Inscription - TalentHub{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h2 class="card-title text-primary">
                        <i class="fas fa-user-plus me-2"></i>Cr√©er un compte
                    </h2>
                    <p class="text-muted">Rejoignez TalentHub et d√©couvrez de nouvelles opportunit√©s</p>
                </div>

                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ error }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endif %}

                <form method="POST" action="/register">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">
                                <i class="fas fa-user me-2"></i>Nom complet
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="name" 
                                name="name" 
                                required
                                value="{{ post.name|default('') }}"
                                placeholder="John Doe">
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Adresse email
                            </label>
                            <input 
                                type="email" 
                                class="form-control" 
                                id="email" 
                                name="email" 
                                required
                                value="{{ post.email|default('') }}"
                                placeholder="votre@email.com">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">
                            <i class="fas fa-lock me-2"></i>Mot de passe
                        </label>
                        <input 
                            type="password" 
                            class="form-control" 
                            id="password" 
                            name="password" 
                            required
                            placeholder="Minimum 6 caract√®res">
                        <div class="form-text">Le mot de passe doit contenir au moins 6 caract√®res.</div>
                    </div>

                    <div class="mb-4">
                        <label for="role" class="form-label">
                            <i class="fas fa-user-tag me-2"></i>Je suis un(e)
                        </label>
                        <select class="form-select" id="role" name="role" required>
                            <option value="" disabled {% if not post.role %}selected{% endif %}>S√©lectionnez votre profil</option>
                            <option value="candidate" {% if post.role == 'candidate' %}selected{% endif %}>
                                üë®‚Äçüéì Candidat - Je cherche un emploi
                            </option>
                            <option value="recruiter" {% if post.role == 'recruiter' %}selected{% endif %}>
                                üëî Recruteur - Je cherche des talents
                            </option>
                        </select>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-check me-2"></i>S'inscrire
                        </button>
                    </div>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <p class="text-muted mb-2">Vous avez d√©j√† un compte ?</p>
                    <a href="/login" class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}