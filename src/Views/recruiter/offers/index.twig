{% extends 'layouts/app.twig' %}

{% block title %}Mes Offres d'Emploi{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Mes Offres d'Emploi</h1>
        <a href="{{ path('recruiter.offers.create') }}" 
           class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
            + Cr√©er une nouvelle offre
        </a>
    </div>
    
    {% if offers|length > 0 %}
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for offer in offers %}
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-semibold mb-2">{{ offer.title }}</h2>
                    <p class="text-gray-600 mb-4">{{ offer.description|slice(0, 100) }}...</p>
                    
                    <div class="flex justify-between items-center mb-4">
                        <span class="bg-gray-100 px-3 py-1 rounded text-sm">
                            üìç {{ offer.location }}
                        </span>
                        {% if offer.salary %}
                            <span class="font-bold text-green-600">
                                {{ offer.salary }} ‚Ç¨
                            </span>
                        {% endif %}
                    </div>
                    
                    <div class="flex space-x-2">
                        <a href="{{ path('recruiter.offers.show', {id: offer.id}) }}" 
                           class="text-blue-600 hover:text-blue-800">
                            Voir d√©tails
                        </a>
                        <a href="{{ path('recruiter.offers.edit', {id: offer.id}) }}" 
                           class="text-yellow-600 hover:text-yellow-800 ml-4">
                            Modifier
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-12 bg-gray-50 rounded-lg">
            <p class="text-gray-500 text-lg">Aucune offre pour le moment.</p>
            <a href="{{ path('recruiter.offers.create') }}" 
               class="inline-block mt-4 text-blue-600 hover:text-blue-800">
                Cr√©er votre premi√®re offre ‚Üí
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}